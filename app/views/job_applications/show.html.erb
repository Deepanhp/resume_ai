<div class="max-w-3xl mx-auto mt-8 px-4">
  <div class="bg-white shadow overflow-hidden sm:rounded-lg">
    <div class="px-4 py-5 sm:px-6">
      <h3 class="text-lg leading-6 font-medium text-gray-900">Job Application Details</h3>
      <p class="mt-1 max-w-2xl text-sm text-gray-500">
        Status: <span class="<%= status_color(@job_application.status) %>"><%= @job_application.status.titleize %></span>
      </p>
    </div>

    <div class="border-t border-gray-200 px-4 py-5 sm:px-6">
      <dl class="grid grid-cols-1 gap-x-4 gap-y-8 sm:grid-cols-2">
        <div class="sm:col-span-2">
          <dt class="text-sm font-medium text-gray-500">Job URL</dt>
          <dd class="mt-1 text-sm text-gray-900">
            <%= link_to @job_application.job_url, @job_application.job_url, target: "_blank", class: "text-indigo-600 hover:text-indigo-500" %>
          </dd>
        </div>

        <div class="sm:col-span-2">
          <dt class="text-sm font-medium text-gray-500">Job Description</dt>
          <dd class="mt-1 text-sm text-gray-900 whitespace-pre-wrap">
            <%= @job_application.job_description %>
          </dd>
        </div>

        <% if @job_application.error_message.present? %>
          <div class="sm:col-span-2">
            <dt class="text-sm font-medium text-red-500">Error</dt>
            <dd class="mt-1 text-sm text-red-700">
              <%= @job_application.error_message %>
            </dd>
          </div>
        <% end %>

        <div class="sm:col-span-1">
          <dt class="text-sm font-medium text-gray-500">Original Resume</dt>
          <dd class="mt-1 text-sm text-gray-900">
            <%= link_to "Download", rails_blob_path(@job_application.original_resume, disposition: "attachment"), 
                class: "text-indigo-600 hover:text-indigo-500" %>
          </dd>
        </div>

        <% if @job_application.customized_resume.attached? %>
          <div class="sm:col-span-1">
            <dt class="text-sm font-medium text-gray-500">Customized Resume</dt>
            <dd class="mt-1 text-sm text-gray-900">
              <%= link_to "Download", rails_blob_path(@job_application.customized_resume, disposition: "attachment"), 
                  class: "text-indigo-600 hover:text-indigo-500" %>
            </dd>
          </div>
        <% end %>
      </dl>
    </div>
  </div>
</div> 